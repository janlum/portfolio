---
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

const pageTitle = "About me";

---


<body>
    <section id="CoverPage" >
        <div id="title_text" >

            <span class="line_1" style="--n:4">Hi.</span><span class="br"></span>
            <span class="line_2" style="--n:9">I'm Jan.</span><span class="br"></span>
            <span class="line_3" style="--n:20">A penultimate year</span><span class="br"></span>
            <span class="line_4" style="--n:24">Engineering / Computer</span><span class="br"></span>
            <span class="line_5" style="--n:24">Science student at the</span><span class="br"></span>
            <span class="line_6" style="--n:23">University of Sydney.</span><span class="br"></span>
            <span class="line_7" style="--n:26">And I'm passionate about</span><span class="br"></span>
            <span class="line_8" style="--n:15">Cybersecurity.</span>
        </div>
        <div id="scroll_arrow" class="demo">
            <a href="#content"><span></span><p>Scroll</p></a>
        </div>
    </section>

    <div id="content" class="min-h-screen flex flex-col">
        <Header />
           <div class="w-full min-h-[80vh] grid place-items-center">
                <div id="row" class="max-w-screen-xl w-[80%] grid grid-cols-2 gap-14">
                    <div class="  md:my-6 md:mx-6">
                        <img src="/images/mountain.jpg" alt="image of a computer"  class="about-picture w-full h-full object-cover px-[auto]">
                    </div>
                    <div class="flex items-center right">
                        <div class="pl-[20px] content">
                            <h1 class="text-center">About Me</h1>
                            <p class="p_content">
                                I'm a Computer Science student based in Sydney, Australia. I'm passionate about Cybersecurity and am currently working my way towards a certificate. 
                            </p>
                            <p class="p_content">
                                Organised, independent person with good critical thinking skills. Enjoys solving challenges from Capture-The-Flag (CTF) tournaments and reading writeups to learn how other people solved a challenge differently. Loves reading and watching movies. 
                            </p>
                            <p class="p_content">
                                Passionate about Computer Science as a whole and loves learning about how programs and machines function.
                            </p>
                            <p class="p_content">
                                Leave me an email to get in touch!
                            </p>
                        </div>
                    </div>
                </div>
           </div>
        <Footer />
        <script>
            import "../scripts/menu.js";
        </script>
    </div>
</body>